Day 104/150: Minimum Operations to Make Array Elements Zero


class Solution {
    public long minOperations(int[][] queries) {
        long ans = 0;
        for (int[] query : queries) {
            int l = query[0];
            int r = query[1];
            long sumLevels = getOperations(r) - getOperations(l - 1);
            ans += (sumLevels + 1) / 2;
        }
        return ans;
    }

    // Returns the total "division levels" for numbers in [1, n]
    private long getOperations(int n) {
        if (n <= 0) return 0;
        long res = 0;
        int ops = 0;
        for (long powerOfFour = 1; powerOfFour <= n; powerOfFour *= 4) {
            int l = (int) powerOfFour;
            int r = (int) Math.min(n, powerOfFour * 4 - 1);
            ops++;
            res += (long) (r - l + 1) * ops;
        }
        return res;
    }
}
